#!/bin/sh
m4src=@m4dir@/m4

gen_makefile() {
cat << EOF > "$1"
all:
clean:
dist:
distclean:
install:
.PHONY: all clean dist distclean install
EOF
}

mkdir -p m4 intl po
for i in $m4src/*.m4 ; do
	cp $i m4/
done

touch config.rpath ABOUT-NLS

for i in intl/Makefile.in po/Makefile.in.in ; do
	[ -e "$i" ] && touch "$i" || gen_makefile "$i"
done
true
